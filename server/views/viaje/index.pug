extends ../layout/index
block content
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${travel.imagen}_ln.jpg`, alt="Imagen de destino", class="img-fluid")
            .col-md-7
                h1 #{travel.titulo}
                p
                    i.fas.fa-calendar-alt
                    |   <strong>Fecha de ida:</strong> #{travel.fecha_ida} <strong>Fecha de regreso:</strong> #{travel.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |   #{travel.precio} COP
                p
                    i.fas.fa-users
                    |   #{travel.disponibles}
                p.text-justify #{travel.descripcion}
